<Window x:Class="MovieInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieInfo"
        mc:Ignorable="d"
        Title="MovieInfo - Simple movie library tool" Height="525" Width="625">
    <Grid x:Name="MovieInfoGrid">
        <ListBox x:Name="movieListBox" SelectionChanged="movieListBox_SelectionChanged" HorizontalAlignment="Left" Margin="0,19,0,0" VerticalAlignment="Stretch" Width="245"/>
        <Label x:Name="movieNameLabel" Content="Movie Title:" HorizontalAlignment="Left" Height="33" Margin="245,20,0,0" VerticalAlignment="Top" Width="358"/>
    </Grid>
</Window>
